.input-top
  = render partial: '/template/input-top'

  .products-buy_contents
    .products-buy_content
      .products-buy_content__title
        購入内容の確認
      .products-buy_content__image
        .products-buy_boxs
          .products-buy_boxs__item
            .buy-image
              =image_tag 'copy/steak.jpg', class: 'image'

            .buy-image_info
              %p.buy-title 焼いた牛肉
              %span.buy-price ￥７７７７
              %span.buy-price-info（税込）送料込み
              
      .products-buy_item
        .products-buy_item__form
          .buy-item
            %ul.buy-price
              %li.buy-price__title 支払い金額
              %li.buy-price__pay ￥77777

          .buy-user__info
            %p.buy-nav 支払い方法
            -# 登録がない場合はクレジットカード登録へ飛ぶ。登録があった場合はクレジットカードの詳細表示
            = icon('fas', 'plus-circle', class: 'icon')
            =link_to '登録してください', "#", class: "buy-info"

            -# 登録がある場合は支払い方法の横にリンクがくるようです
            -# =link_to '変更する', "#", class: ""

          .buy-user__info
            %p.buy-nav 配送先
            -# ここも、登録あるなしで変わるみたいです。
            = icon('fas', 'plus-circle', class: 'icon')
            =link_to '登録してください', "#", class: "buy-info"
            
            -# 登録がある場合は配送先の横にリンクがくるようです
            -# =link_to '変更する', "#", class: ""
            
          .buy-submit
            %p
              郵便局/コンビニ受取をご希望の方は、購入後に取引画面
              から受取場所を変更をすることが可能です。出品者が発送作業を
              開始した後は受取場所の変更ができませんので、早めに変更を行ってください。

              -# 支払い方法と、配送先がある場合がボタンの色が赤になるようです
            %input.buy{type: "submit", value: "購入する"}

  .products-bottom
    = render partial: '/template/input-bottom'