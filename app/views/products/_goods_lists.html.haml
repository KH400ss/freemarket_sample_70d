%ul.goods__lists
  - goods.each do |g|
    %li.goods__lists__list
      = link_to product_path(g), class: "list-link" do
        - g.images.each_with_index do |image, index|
          - if index == 0
            = image_tag(image.image.url, class: "list-image")
        .list-details
          %h3.list-details__name
            = g.name
          .list-details__body
            %ul
              %li
                = g.price
                円
              %li.list-details__body__icon
                = icon("fa","star")
                0
            %p
              （税込）