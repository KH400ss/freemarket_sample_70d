.main_new_card
  %section.new_card__registration
    %h2.registration__header
      クレジットカード情報入力
    %form.registration-form
      .form_contents
        .form_contents__card_number
          %label.card_no
            カード番号
          %span.form_require
            必須
          %input.form_contents__card_number__input{type: :text, placeholder: "半角数字のみ"}

        .form_contents__card_expiration_date
          %label.expiration_date
            有効期限
          %span.form_require
            必須
          %br
          .select_display_month
            %select.select_month
              %option{:value => "01"}01  
              %option{:value => "02"}02
              %option{:value => "03"}03
              %option{:value => "04"}04
              %option{:value => "05"}05
              %option{:value => "06"}06
              %option{:value => "07"}07
              %option{:value => "08"}08
              %option{:value => "09"}09
              %option{:value => "10"}10
              %option{:value => "11"}11
              %option{:value => "12"}12
            %span.text-month
              月
          .select_display_year
            %select.select_year
              %option{:value => "20"}20  
              %option{:value => "21"}21
              %option{:value => "22"}22
              %option{:value => "23"}23
              %option{:value => "24"}24
              %option{:value => "25"}25
              %option{:value => "26"}26
              %option{:value => "27"}27
              %option{:value => "28"}28
              %option{:value => "29"}29
              %option{:value => "30"}30
            %span.text-year
              年
        .form_contents__card_security_code
          %label.security_code
            セキュリティーコード
          %span.form_require
            必須
          %input.form_contents__security_code__input{type: :text, placeholder: "カード背面４桁もしくは３桁の番号"}

        %input.form_contents__submit{type: "submit", value: "追加する"}  