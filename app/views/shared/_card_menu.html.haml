.main_card
  %section.card_display
    %h2.card_display__header
      支払い方法
    .card_display__body
      - if @creditcard.present?
        .credit_card__list__frame
          .credit_card_info
            .credit_card_info__brand
            .credit_card_info__numbers
              .number
                = "**** **** **** " + @card.last4
              .expiration_date
                .expiration_date__title
                  有効期限
                .expiration_date__info
                  = @exp_month + " / " + @exp_year
          .destroy__function
            .destroy__function__link
              = link_to creditcard_path(@creditcard.id), method: :delete, class: "link__btn--blue" do 
                削除する
      - else
        .card_display__body__inner
          = icon('fas', 'credit-card')
          = link_to "クレジットカードを追加する",new_creditcard_path, class: 'card_display__body__inner__btn'
      